@using BangumiProject.Areas.Bangumi.Views.Bangumi.Model
@model BangumiEdit
@{
    ViewData["Title"] = "AddBangumi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>编辑动画</h2>
<form asp-route="PostBangumi" asp-route-id="@Model.Anime.AnimeID">
    <table border="1" style="width:100%;table-layout:fixed;">
        <tr>
            <td>动画名：</td>
            <td><input asp-for="Anime.AnimeName" style="width:100%;" /></td>
        </tr>
        <tr>
            <td>动画集数：</td>
            <td><input asp-for="Anime.AnimeNum" style="width:100%;" /></td>
        </tr>
        <tr>
            <td>动画封面图片：</td>
            <td><input asp-for="Anime.AnimePic" style="width:100%;" /></td>
        </tr>
        <tr>
            <td>动画简介：</td>
            <td><textarea asp-for="Anime.AnimeInfo" style="width:100%; height:150px;"></textarea></td>
        </tr>
        <tr>
            <td><label asp-for="Anime.AnimePlayTime"></label></td>
            <td><input asp-for="Anime.AnimePlayTime" style="width:100%;" /></td>
        </tr>
        <tr>
            @*<td>动画类型：</td>
            <td>
                <select class="browser-default" asp-for="Anime.AnimeType" asp-items="@Html.GetEnumSelectList(typeof(AnimeType))" style="width:100%;"></select>
            </td>*@
        </tr>
        <tr>
            <td>动画是否已经完结：</td>
            <td><input asp-for="Anime.IsEnd" />完结</td>
        </tr>
        <tr>
            <td>添加标签：</td>
            <td><input asp-for="AddTag" />标签</td>
        </tr>

        <tr>
            <td>现在存在的标签</td>
            <td>
                @foreach (var item in Model.Anime.Tags)
                {
                    <div class="chip">
                        @item.TagName
                    </div>
                }
            </td>
        </tr>
    </table>
    <p>
        <label>
            <input asp-for="Anime.IsEnd" type="checkbox" />
            <span>完结</span>
        </label>
    </p>
    <input type="submit" class="btn" value="提交" />
</form>
