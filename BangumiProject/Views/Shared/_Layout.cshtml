@inject UserManager<Users> UserManager
@{
    bool IsSignED = SignInManager.IsSignedIn(User);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BangumiProject</title>

